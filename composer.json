{
    "name": "payhere/payhere-php-sdk",
    "description": "Payhere PHP package",
    "type": "library",
    "require": {
        "php": ">=7.0.0",
        "guzzlehttp/guzzle": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "authors": [
        {
            "name": "Acellam Guy",
            "email": "acellam.guy@gmail.com",
            "homepage": "https://github.com/mistaguy"
        },
        {
            "name": "Riley Digital Services",
            "email": "dev@rds.ug",
            "homepage": "https://rds.ug"
        }
    ],
  "autoload": {
    "psr-4": {
      "RDS\\Payhere\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "RDS\\Payhere\\": [
        "tests/"
      ]
    }
  },
  "scripts": {
    "test": [
      "vendor/bin/phpunit"
    ],
    "coverage": [
      "php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"
    ]
  }
}